#include <iostream>
using namespace std;

struct MOTOR {
char*merk;
long tahun;
char*nopolisi;
char*warna;

public:
    void setmotor ()
    {
        merk= "Honda GL Pro";
        tahun=1997;
        nopolisi="G 5879 BF ";
        warna= "Hitam";
    }
    void showinfomotor(){
         cout<<"Merk      : "<<merk<<endl;
         cout<<"Tahun     : "<<tahun<<endl;
         cout<<"No Polisi : "<<nopolisi<<endl;
         cout<<"Warna     : "<<warna<<endl;
    }
};

int main ()
    {
        MOTOR M;
        M.setmotor();
        M. showinfomotor();
        
        return 0;
    
    }
